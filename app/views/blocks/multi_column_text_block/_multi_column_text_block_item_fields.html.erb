<div class="nested-fields sortable-field">
  <div class="panel panel-default">
    <div class="panel-heading sortable-field-set__handle">
      <h3 class="panel-title">
        <%= f.object.title.presence || 'New column' %>
      </h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :title %>
        </div>
        <div class="col-sm-6">
          <%= f.input :text, markdown: true %>
        </div>
      </div>
      <br>
      <%= link_to_remove_association 'Remove column', f, class: 'btn btn-default' %>
    </div>
  </div>
  <div class="sortable-field-set__position">
    <%= f.input :position, as: :hidden %>
  </div>
</div>

<div class="site-container">
  <div class="container-fluid">
    <div class="row">
      <% item_length = block.multi_column_text_block_items.length %>
      <% block.multi_column_text_block_items.each_with_index do |item, index| %>
        <%= content_tag :div, class: "col-sm #{'text-center' if item_length > 2} #{'mt-5 mt-sm-0' unless index.zero?}" do %>
          <%= content_tag :h2, md(item.title), class: 'bold-title' if item.title.present? %>
          <%= content_tag :div, md(item.text), class: 'small-body-text mt-2 mt-sm-3 markdown' if item.text.present? %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

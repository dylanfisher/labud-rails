<div class="site-container">
  <div class="container-fluid">
    <%= link_to project_path(block.project.to_friendly_param), class: 'blank-link' do %>
      <div class="row small-gutters mb-2 mb-sm-3">
        <% 4.times do |i| %>
          <div class="project-feature-block__column col-6 col-sm-3 mb-3 mb-sm-0">
            <% block.send("media_item_#{i+1}s").each_with_index do |media_item, index| %>
              <%= content_tag :div, nil, class: "project-feature-block__slide bg-image bg-image-square #{'active' if index.zero?}", style: "background-image: url(#{media_item.attachment.url(:small)});" %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-9 col-md-6">
        <%= content_tag :h2, class: 'small-title' do %>
          <%= link_to md(block.project.title), project_path(block.project.to_friendly_param), class: 'blank-link' %>
        <% end %>
        <%= content_tag :div, md(block.text), class: 'mb-2' %>
        <%= link_to 'View Case Study', project_path(block.project.to_friendly_param), class: 'small-body-text background-color-link' %>
      </div>
    </div>
  </div>
</div>
